<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/laout_search"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#f7efef" >
	
	<!--title -->
    <include 
        android:id="@+id/inc_title"
        layout="@layout/layout_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-3dp"/>
    
	<!-- bottom -->
   	<LinearLayout
   	    android:id="@+id/layout_bottom"
	    android:layout_width="fill_parent"
	    android:layout_height="55dip"
	    android:layout_alignParentBottom="true"
	    android:orientation="horizontal">
	    	<TextView 
	    	    android:id="@+id/btn_tran"
	    	    android:layout_width="fill_parent"
	    	    android:layout_height="fill_parent"
		        android:textSize="16dip"
	    	    android:layout_weight="1"
	    	    android:gravity="center"
	    	    android:background="@drawable/btn_bottom_bg_press"
	    	    android:textColor="@color/press_text"
	    	    android:text="换乘"/>
	    	<ImageView
			    android:id="@+id/line1"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:src="@drawable/line_v"/>
	    	<TextView 
	    	    android:id="@+id/btn_road"
	    	    android:layout_width="fill_parent"
	    	    android:layout_height="fill_parent"
			    android:textSize="16dip"
	    	    android:layout_weight="1"
	    	    android:gravity="center"
	    	    android:background="@drawable/btn_bottom_bg_normal"
	    	    android:textColor="@color/black"
	    	    android:text="路线"/>
	    	<ImageView
			    android:id="@+id/line2"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:src="@drawable/line_v"/>
	    	<TextView 
	    	    android:id="@+id/btn_station"
	    	    android:layout_width="fill_parent"
	    	    android:layout_height="fill_parent"
			    android:textSize="16dip"
	    	    android:layout_weight="1"
	    	    android:gravity="center"
	    	    android:background="@drawable/btn_bottom_bg_normal"
	    	    android:textColor="@color/black"
	    	    android:text="站点"/>
  	</LinearLayout>
  		    
    <RelativeLayout 
        android:id="@+id/tran"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inc_title"
        android:layout_above="@id/layout_bottom"
        android:visibility="visible">
        <RelativeLayout 
            android:id="@+id/rl_1_1"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white">
            <Button 
                android:id="@+id/btn_tran_change"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_change_bg"/>
            <TextView 
                android:id="@+id/btn_loc"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_bg"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="当前位置"
                android:visibility="gone"/>
            <EditText 
                android:id="@+id/et_start_place"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_toLeftOf="@id/btn_loc"
                android:layout_toRightOf="@id/btn_tran_change"
                android:layout_alignParentTop="true"
                android:padding="4dp"
                android:background="@drawable/text_border_black"
                android:singleLine="true"
                android:editable="false"
                android:hint="输入起点"/>
            <TextView 
                android:id="@+id/btn_search"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_bg"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="查询"/>
            <EditText 
                android:id="@+id/et_end_place"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_toLeftOf="@id/btn_search"
                android:layout_toRightOf="@id/btn_tran_change"
                android:layout_marginRight="10dp"
                android:layout_alignParentBottom="true"
                android:padding="4dp"
                android:background="@drawable/text_border_black"
                android:singleLine="true"
                android:editable="false"
                android:hint="输入终点"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/line1_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_1_1"
            android:src="@drawable/line"/>
        <RelativeLayout 
            android:id="@+id/rl_1_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1_1"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            >
            <ImageView 
                android:id="@+id/btn_time_less"
                android:layout_width="20dp"
    	        android:layout_height="20dp"
    	        android:layout_marginRight="5dp"
    	        android:background="@drawable/check"/>
            <TextView 
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
    	        android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/btn_time_less"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="最快到达"/>
            
            <ImageView 
                android:id="@+id/btn_transfer_less"
                android:layout_width="20dp"
    	        android:layout_height="20dp"
    	        android:layout_marginRight="5dp"
    	        android:layout_toRightOf="@id/tv_time"
    	        android:background="@drawable/uncheck"/>
            <TextView 
                android:id="@+id/tv_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
    	        android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/btn_transfer_less"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="最少换乘"/>
            
            <ImageView 
                android:id="@+id/btn_walk_less"
                android:layout_width="20dp"
    	        android:layout_height="20dp"
    	        android:layout_marginRight="5dp"
    	        android:layout_toRightOf="@id/tv_transfer"
    	        android:background="@drawable/uncheck"/>
            <TextView 
                android:id="@+id/tv_walk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/btn_walk_less"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="最少步行"/>
            
            <ImageView 
                android:id="@+id/btn_subway_no"
                android:layout_width="20dp"
    	        android:layout_height="20dp"
    	        android:layout_marginTop="10dp"
    	        android:layout_marginRight="5dp"
    	        android:layout_below="@id/btn_time_less"
    	        android:background="@drawable/uncheck"/>
            <TextView 
                android:id="@+id/tv_subway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
    	        android:layout_marginTop="10dp"
    	        android:layout_below="@id/btn_time_less"
                android:layout_toRightOf="@id/btn_subway_no"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="不乘地铁"/>
        </RelativeLayout>
        <ListView 
            android:id="@+id/tran_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:layout_below="@id/rl_1_2">
        </ListView>
    </RelativeLayout>
  		    
    <RelativeLayout 
        android:id="@+id/road"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inc_title"
        android:layout_above="@id/layout_bottom"
        android:visibility="gone">
        <RelativeLayout 
            android:id="@+id/rl_2_1"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white">
            <TextView 
                android:id="@+id/btn_route_search"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_bg"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="查询"/>
            <EditText 
                android:id="@+id/et_road"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_toLeftOf="@id/btn_route_search"
                android:layout_marginRight="10dp"
                android:layout_alignParentTop="true"
                android:padding="4dp"
                android:background="@drawable/text_border_black"
                android:singleLine="true"
                android:hint="输入路线名称"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/line2_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_2_1"
            android:src="@drawable/line"/>
        <ListView 
            android:id="@+id/road_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:layout_below="@id/line2_1">
        </ListView>
    </RelativeLayout>
  		    
    <RelativeLayout 
        android:id="@+id/station"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inc_title"
        android:layout_above="@id/layout_bottom"
        android:visibility="gone">
        <RelativeLayout 
            android:id="@+id/rl_3_1"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white">
            <TextView 
                android:id="@+id/btn_station_search"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_bg"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="查询"/>
            <EditText 
                android:id="@+id/et_station"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_toLeftOf="@id/btn_station_search"
                android:layout_marginRight="10dp"
                android:layout_alignParentTop="true"
                android:padding="4dp"
                android:background="@drawable/text_border_black"
                android:singleLine="true"
                android:hint="输入站点名称"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/line3_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_3_1"
            android:src="@drawable/line"/>
        <ListView 
            android:id="@+id/station_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:layout_below="@id/line3_1">
        </ListView>
    </RelativeLayout>
</RelativeLayout>


